<div class="container">
	<div class="row">
		<div class="col text-center" id="top-bar">
			<h1>Eat Da Burger</h1>
		</div>

        <div class="container">
            <p>Enter in a burger you would like to eat!</p>
	<div class="row">
		<div class="col-4 enter_section">
		<form action="/burger/create" method="POST">
			<input type="text" name="burger_name" class="form-control" value="" id="enter_text">
		</div>
         <div class ="col-2">
			<button type="submit" class="btn btn-primary" id="text-enter-button">SUBMIT</button>
            </div>
		</form>
	</div>
</div>

		<div class="col text center" class="task">
               <h2>Available Burgers</h2>
			<div class="row">

				{{#each burgers_data}}
					{{#unless this.devoured}}
			<div class="col text-center">
					<pre>{{this.id}}.  {{this.burger_name}}</pre>
			</div>

		<div class="col text-center">

			<form method="POST" action="/burger/update" class="button-size">
				<input type="hidden" name="id" type="text" value="{{this.id}}">
				<br>
				<button type="submit" class="btn btn-default">Devour it!</button>
		    </form>
				</div>
				{{/unless}}
				{{/each}}
			</div>
		</div>


		<div class="col text-center" class="task">
          <h2>Devoured Burgers</h2>
			{{#each burgers_data}}
				{{#if this.devoured}}
					<input class="form-control" type="text" placeholder="{{this.id}}. {{this.burger_name}}" readonly>
				{{/if}}
			{{/each}}
		</div>
	</div>
</div>

